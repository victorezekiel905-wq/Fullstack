# ============================================
# BACKEND ENVIRONMENT VARIABLES
# Copy these to Render Dashboard
# ============================================

# Node Environment
NODE_ENV=production

# Server Port (Render automatically sets this)
PORT=3000

# Database Connection
# Replace with your Render PostgreSQL Internal URL
DATABASE_URL=postgresql://user:password@internal-host/database

# JWT Configuration
JWT_SECRET=synergyswift_secret_2026_change_this_in_production
JWT_EXPIRES_IN=7d

# TypeORM Configuration
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false
TYPEORM_CACHE=false

# Node Memory Optimization (512 MB free tier)
NODE_OPTIONS=--max-old-space-size=460

# CORS Configuration
CORS_ORIGIN=*

# API Documentation
ENABLE_DOCS=true

# Tracing (disable on free tier to save memory)
ENABLE_TRACING=false

