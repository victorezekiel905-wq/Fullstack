# ===========================================
# RENDER FREE TIER CONFIGURATION
# ===========================================

# Application Environment
NODE_ENV=render-free
PORT=                           # Leave empty - Render provides this dynamically

# ===========================================
# DATABASE CONFIGURATION (Render PostgreSQL)
# ===========================================
DATABASE_HOST=                  # From Render PostgreSQL: Internal Database URL hostname
DATABASE_PORT=5432
DATABASE_USER=                  # From Render PostgreSQL
DATABASE_PASSWORD=              # From Render PostgreSQL
DATABASE_NAME=                  # From Render PostgreSQL
DATABASE_SSL=true              # REQUIRED for Render PostgreSQL
DATABASE_POOL_SIZE=5           # Reduced for free tier (512MB RAM limit)

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=                     # REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_REFRESH_SECRET=             # REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ORIGIN=https://your-frontend.onrender.com,https://your-domain.com
RATE_LIMIT_TTL=60              # seconds
RATE_LIMIT_MAX=100             # requests per TTL

# ===========================================
# COMMUNICATION SERVICES (Optional)
# ===========================================

# Email (SMTP) - Use free services like SendGrid, Mailgun free tier
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Twilio (SMS/WhatsApp) - Optional, use credits
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
WHATSAPP_PHONE_NUMBER=

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. Create PostgreSQL database on Render (free tier)
# 2. Copy DATABASE_* values from Render PostgreSQL connection string
# 3. Generate JWT secrets using the commands above
# 4. Set CORS_ORIGIN to your actual frontend URL
# 5. Add these as environment variables in Render Dashboard
# 6. Deploy backend as Docker Web Service
# 7. Render will auto-inject PORT variable
# ===========================================
